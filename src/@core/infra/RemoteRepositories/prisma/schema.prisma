
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category{
  Id String @unique
  name String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  suppliers Supplier[]
}

model Supplier{
  Id String @unique 
  name String
  contact String
  email String?
  eccomerce String?
  instragramUrl String?
  rate Int?
  category Category @relation(fields: [categoryId], references: [Id], onUpdate: Cascade, onDelete: Cascade)
  categoryId String 
  favoriteSuppliers FavoriteCostumerSupplier[]
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
}
model Costumer{
    Id String @unique 
    name String
    email String @unique
    phoneNumber String? 
    password String
    paymentStatus String
    paymentDate DateTime
    paymentdueDate DateTime?
    FavoriteSuppliers FavoriteCostumerSupplier[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model FavoriteCostumerSupplier{
  
  Costumer Costumer @relation(fields: [CostumerId], references: [Id],onUpdate: Cascade,onDelete: Cascade)
  CostumerId String 
  Supplier Supplier @relation(fields: [SupplierId], references: [Id],onUpdate: Cascade, onDelete: Cascade)
  SupplierId String
  @@id([CostumerId,SupplierId])
  @@index([CostumerId ,SupplierId])
  
}